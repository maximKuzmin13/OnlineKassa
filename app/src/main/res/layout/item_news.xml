<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimens_8_dp"
    android:layout_marginVertical="@dimen/dimens_4_dp"
    android:paddingVertical="@dimen/dimens_8_dp"
    android:background="@drawable/bg_white">

    <TextView
        android:id="@+id/title"
        style="@style/Text.Bold.14sp"
        android:layout_width="0dp"
        android:textColor="@color/textPrimary"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimens_8_dp"
        android:paddingBottom="@dimen/dimens_8_dp"
        app:layout_constraintBottom_toTopOf="@+id/desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc"
        style="@style/Text.Regular.12sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textSecondary"
        android:paddingHorizontal="@dimen/dimens_8_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

</androidx.constraintlayout.widget.ConstraintLayout>